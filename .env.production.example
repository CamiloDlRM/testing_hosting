# Production Environment Variables
# Copy this file to .env and configure for production

# PostgreSQL Configuration
POSTGRES_USER=coolify_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_NOW
POSTGRES_DB=coolify_wrapper
POSTGRES_PORT=5432

# Backend Configuration
NODE_ENV=production
BACKEND_PORT=3001

# JWT Configuration (IMPORTANT: Use a secure random string of at least 32 characters)
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARACTERS
JWT_EXPIRES_IN=7d

# Coolify API Configuration
COOLIFY_API_URL=https://your-coolify-instance.com/api/v1
COOLIFY_API_TOKEN=your_coolify_api_token_here

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_URL=https://your-domain.com
VITE_API_URL=https://api.your-domain.com/api

# Security Notes:
# 1. Change ALL passwords and secrets before deploying
# 2. Use strong, unique passwords (minimum 32 characters)
# 3. Never commit .env files to version control
# 4. Keep COOLIFY_API_TOKEN secure
# 5. Use HTTPS in production (configure reverse proxy)
