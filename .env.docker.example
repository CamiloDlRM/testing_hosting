# Docker Compose Environment Variables

# PostgreSQL Configuration
POSTGRES_USER=coolify_user
POSTGRES_PASSWORD=change_this_secure_password_in_production
POSTGRES_DB=coolify_wrapper
POSTGRES_PORT=5432

# Backend Configuration
NODE_ENV=production
BACKEND_PORT=3001
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRES_IN=7d

# Coolify API Configuration
COOLIFY_API_URL=https://your-coolify-instance.com/api/v1
COOLIFY_API_TOKEN=your_coolify_api_token_here

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_URL=http://localhost
VITE_API_URL=http://localhost:3001/api

# For production deployment, change to your actual domain:
# FRONTEND_URL=https://your-domain.com
# VITE_API_URL=https://api.your-domain.com/api
